{{template "header.tmpl"}}
<form method="POST" action="/stuff/edit">

  <div class="row">
    <div class="large-12 columns">
      <input type="hidden" name="id" value="{{.Id}}" placeholder="" required />
    </div>
  </div>

  <div class="row">
    <div class="large-12 columns">
      <label>name
        <input type="text" name="name" value="{{.Name}}" placeholder="" required />
      </label>
    </div>
  </div>

  <div class="row">
    <div class="large-12 columns">
      <label>email
        <input type="email" name="email" value="{{.Email}}" placeholder="" required />
      </label>
    </div>
  </div>

  <div class="row">
    <div class="large-12 columns">
      <button type="submit">Αποθήκευση</button>
    </div>
  </div>
</form>
{{template "footer.tmpl"}}
